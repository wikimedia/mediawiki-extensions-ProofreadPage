<?xml version="1.0"?>
<ruleset name="ProofreadPage">
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortBoolReturn" />
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortIntReturn" />
		<exclude name="MediaWiki.Usage.StaticClosure.StaticClosure" />
		<exclude name="PSR12.Functions.ReturnTypeDeclaration.SpaceBeforeColon" />
	</rule>
	<rule ref="MediaWiki.NamingConventions.ValidGlobalName">
		<properties>
			<property name="ignoreList" type="array" value="$proofreadPageNamespacesNames,$proofreadPageNamespacesAliases" />
		</properties>
	</rule>
	<file>.</file>
	<arg name="extensions" value="php" />
	<arg name="encoding" value="UTF-8" />
</ruleset>
